<h1>Productos</h1>
<div class="container">
  <div class="forms">

    <div class="cart">
    <h2>Carrito</h2>
    {{#if hayProductosCart}}
    <ul id="cart-list" class="cart-list">
    {{#each cartResponse.payload}}
      <li id={{this.product._id}}>
        <div>
        <strong class="prod-title">
            {{this.product.title}}
            </strong>
            <br />
            <strong>Price</strong>: ${{this.product.price}}
            <br />
            <strong>Description</strong>: {{this.product.description}}
            <br />
            <strong>Category</strong>: {{this.product.category}}
            <br />
            <strong>Id</strong>:
            {{this.product._id}}
            <br />
            <strong>Quantity</strong>:
            {{this.quantity}}

        </div>
        <div class="delete-from-cart-btn-container">
          <button id={{this.product._id}} class="delete-from-cart-btn">Eliminar</button>
        </div>
            </li>
          <br />
          {{/each}}
    </ul>
    {{/if}}
  </div>
    </div>
  </div>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js">

</script>